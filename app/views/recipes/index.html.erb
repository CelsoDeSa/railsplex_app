<div class="container">
  <div class="span3">
    <ul class="nav nav-list">
      <li class="nav-header"><h5>Last Recipes</h5></li>
      <li class="divider"></li>
      <% @recipes.each do |recipe| %>
      <li><%= link_to glyph(:book) + " #{recipe.title}", recipe, class: "muted" %></li>
      <% end %>
    </ul>
  </div>

<li class="span1" style="list-style: none;"></li>

  <ul class="span8 thumbnails">
    <% @recipes.each_with_index do |recipe, index| %>
    
    <li class="span6">
      <span class="label label-important pull-right"><h5><%= glyph(:"book", :white) + " #{index}" %></h5></span>
      <div class="thumbnail">
          
            <p>
              <h3 class="text-error text-left"><%= recipe.title %></h3>
            </p>
            <p>
              <dd><%= sanitize(truncate(recipe.recipe, length: 140, separator: ' ')) %>
              <b><%= link_to "continue >", recipe %></b></dd>
            </p>
          
      </div>
    </li>
    <% end %>
  </ul>
</div>

<% if can? :create, @receipes %>
  <%= link_to 'New Recipe', new_recipe_path, class: "btn btn-success" %>
<% end %>