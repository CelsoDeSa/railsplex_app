<div class="container">
  <ul class="thumbnails">
    <li class="span2"></li>
    <li class="span8">
      <div class="thumbnail">
          <p>
            <h2 class="text-error text-center"><%= @recipe.title %></h2>
          </p>

          <dd><%= sanitize(@recipe.recipe) %></dd>

          <p class="pager">
          	<%= link_to 'Back', recipes_path, class: "btn" %>
          	<% if can? :create, @receipes %>
  				    <%= link_to 'New Recipe', new_recipe_path, class: "btn btn-success" %>
			      <% end %>
          	<% if can? :update, @recipe %>
          		<%= link_to 'Edit', edit_recipe_path(@recipe), class: "btn" %>
          	<% end %>
          	<% if can? :destroy, @recipe %>
          		<%= link_to 'Destroy', @recipe, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-warning" %>
          	<% end %>
          </p>
      </div>
    </li>
    <li class="span2"></li>
  </ul>
</div>