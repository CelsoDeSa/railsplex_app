
<%= form_for @define, html: {multipart: true} do |f| %>
  <% if @define.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@define.errors.count, "error") %> prohibited this define from being saved:</h2>

      <ul>
      <% @define.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="controls controls-row">
    <%= f.text_field :term, class: "span9", placeholder: "term" %>
    <%= f.text_field :relevance, class: "span2", placeholder: "0" %>
  </div>
  <div class="controls">
    <%= f.text_area :definition, class: "input-xxlarge", placeholder: "definition here" %>
  </div>
  <div class="field">
    <%= f.file_field :image %>
  </div>
  <div class="form-actions">
    <%= f.submit(class: "btn btn-primary") %>
  </div>
<% end %>
